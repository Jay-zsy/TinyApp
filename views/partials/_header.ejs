<header>
  <nav style="height: 86px" class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(error) {%>
    <p id="error" class="alert alert-dark" style="width: auto; margin: 1em">
      <%= error %>
      <script>
        setTimeout(() => {
          document.getElementById("error").remove();
        }, 2500);
      </script>
    </p>
    <%}%> <% if(username) { %>
    <form class="form-inline" action="/logout" method="POST">
      <p style="width: auto; margin: 1em; color: rgba(255, 255, 255, 0.74);">
        Logged In As: <%= username.email %>
      </p>
      <button type="submit" class="btn btn-outline-danger">Logout</button>
    </form>
    <% } else { %>
    <a class="btn btn-outline-primary" href="/login" style="margin-right: 1rem"
      >Login</a
    >
    <a class="btn btn-outline-primary" href="/register">Register</a>
    <% } %>
  </nav>
</header>
